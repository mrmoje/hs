auto lo
iface lo inet loopback

source /etc/network/interfaces.d/*.cfg

auto {{ public_network_ifname }}
iface {{ public_network_ifname }} inet static
  address {{ public_network_address }}
  network {{ public_network }}
  netmask {{ public_network_mask }}
  broadcast {{ public_network_bcast }}
  gateway {{ public_network_gw }}
  dns-nameservers {{ public_dns_nameservers }}

